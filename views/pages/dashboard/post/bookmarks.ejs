<%- include('../../../partials/header.ejs') %>
    <div class="row">
        <div class="col-md-3">
            <%- include('../../../partials/sidebar.ejs') %>
        </div>
        <div class="col-md-9">
            <div class="card card-body">

                <h2 class="mb-3">My Bookmarked Posts</h2>
                <% if(posts.length===0){ %>

                    <h5 class="text-primary">You haven't bookmark any post!</h5>

                    <% } else{ %>
                        <div class="row">
                            <% for(let post of posts.reverse()){ %>
                                <div class="col-md-4 mb-2">
                                    <div class="card">
                                        <% if(post.thumbnail){ %>
                                            <img src="<%= post.thumbnail%> " alt="<%= post.title %>"
                                                class="card-img-top"
                                                style="width: 100%; height: 200px;object-fit: cover; background: #000;">
                                            <% } else{ %>
                                                <img src="/uploads/default-post-image.jpg" alt="<%= post.title %>"
                                                class="card-img-top"
                                                style="width: 100%; height: 200px;object-fit: cover; background: #000;">
                                            <% } %>
                                                <div class="card-body">
                                                    <a href="/post/<%= post._id %>" class="card-title"
                                                        style="color: #000;">
                                                        <%=post.title %>
                                                    </a>
                                                </div>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                        <% } %>

            </div>
        </div>
    </div>

    <%- include('../../../partials/footer.ejs') %>



<script src="/scripts/createPost.js"></script>

</body>

</html>