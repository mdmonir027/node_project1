<%- include('../../../partials/header.ejs') %>
    <div class="row justify-content-center mt-3">
        <div class="col-md-10 col-sm-12">
            <div class="card card-body">
               
                <h2>My created Post</h2>
                <% if(posts.length === 0){ %>
                    
                    <h2 class="text-center">There is no post available right now</h2>
                    <div class="text-center">
                        <a href="/posts/create" class="btn btn-primary btn-sm">Create a post now</a>
                    </div>
                <% } else{ %> 
                    <div class="row">                    
                        <% for(let post of posts.reverse()){  %> 
                            <div class="col-md-4">
                                <div class="card">
                                    <% if(post.thumbnail){ %> 
                                        <img src="<%= post.thumbnail%> " alt="<%= post.title %>" class="card-img-top" style="width: 100%; height: 200px;object-fit: cover; background: #000;">
                                    <% } %> 
                                    <div class="card-body">
                                        <a href="/posts/edit/<%= post._id %>" class="card-title" style="color: #000;"><%=post.title %> </a>
                                    </div>
                                </div>    
                            </div>    
                        <% } %> 
                    </div>
                <% } %> 

            </div>
        </div>
    </div>

<%- include('../../../partials/footer.ejs') %>



<script src="/scripts/createPost.js"></script>

</body>

</html>


